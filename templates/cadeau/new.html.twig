
{% extends 'base2.html.twig' %}
{% block title %}New cadeau
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
		.example-wrapper {
			margin: 1em auto;
			max-width: 500px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
			text-align: center; /* Add this line to center the content */
		}
	</style>

	<div class="example-wrapper">
		<h1>Create new cadeau</h1>

		{{ form_start(form, {attr: {novalidate: 'novalidate'}}) }}
		<table>
			<tr>
				<td>{{ form_label(form.nom_cadeay,"nom cadeau ") }}</td>
				<td>{{ form_widget(form.nom_cadeay) }}</td>
				<td>{{ form_errors(form.nom_cadeay) }}</td>
				<br>
			</tr>
			<tr>
				<td>{{ form_label(form.reccurence,"reccurence ") }}</td>
				<td>{{ form_widget(form.reccurence) }}</td>
				<td>{{ form_errors(form.reccurence) }}</td>
				<br>
			</tr>
			<tr>
				<td>{{ form_label(form.description,"description") }}</td>
				<td>{{ form_widget(form.description) }}</td>
				<td>{{ form_errors(form.description) }}</td>
				<br>
			</tr>
			<tr>
				<td>{{ form_label(form.valeur,"valeur") }}</td>
				<td>{{ form_widget(form.valeur) }}</td>
				<td>{{ form_errors(form.valeur) }}</td>
				<br>
			</tr>

		</table>


		{{ include('cadeau/_form.html.twig') }}
		<a href="{{ path('app_cadeau_index') }}">back to list</a>
	</div>
{% endblock %}
