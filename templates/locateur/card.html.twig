{% extends 'base.html.twig' %}

{% block body %}
   <table class="table">
        <thead>
            <tr>
            
                <th>Image</th>
                <th>Nom</th>
                <th>Prenom</th>
                <th>Email</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
        {% for locateur in locateurs %}
            <tr>
               
                <td><img src="{{ asset('uploads/' ~ locateur.img) }}" style="border-radius: 50%;" width="50" height="50" alt="Image du locateur"></td>
                <td>{{ locateur.idRole.idUser.nom }}</td>
                <td>{{ locateur.idRole.idUser.prenom }}</td>
                <td>{{ locateur.email }}</td>
                <td> <button><a href="{{ path('disable_locateur', {'id_loc': locateur.idLoc}) }}" class="btn btn-danger btn-sm">Disable</a></button></td>

                
               
               
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
