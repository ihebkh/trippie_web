{% extends 'base2.html.twig' %}

{% block title %}CoVoiturage index
{% endblock %}

{% block body %}
	<main id="main" class="main">


		<div class="pagetitle">

			<h5 class="card-title">Customers list</h5>

			<!-- End Search Bar -->
			<nav>
				<ol class="breadcrumb">
					<li class="breadcrumb-item">
						<a href="index.html">Home</a>
					</li>
					<li class="breadcrumb-item">Tables</li>
					<li class="breadcrumb-item active">General</li>
				</ol>

			</nav>
		</div>
		<!-- End Page Title -->

		<section class="section">
			<div class="row">
				<div class="col-lg-12">

					<div class="card">

						{% for message in app.flashes('notice') %}
							<div class="alert alert-success bg-success text-light border-0 alert-dismissible fade show" role="alert">
								{{ message }}
							</div>

						{% endfor %}


						{% for message in app.flashes('noticedelete') %}
							<div class="alert alert-danger bg-danger text-light border-0 alert-dismissible fade show" role="alert">
								{{ message }}
							</div>

						{% endfor %}

						<div class="card-body">
							<h5 class="card-title">Co Voiturage list</h5>
							<div class="search-form d-flex align-items-center justify-content-end">

								<form class="search-form d-flex align-items-center" method="GET" action="{{ path ('searchvovrahali') }}">
									<input type="text" name="query" placeholder="Search" title="Enter search keyword">
									<button type="submit" title="Search">
										<i class="bi bi-search"></i>
									</button>
								</form>

							</div>

								<a href="{{ path ('tri') }}">tri&nbsp&nbsp&nbsp&nbsp&nbsp&nbsp</a>


							<!-- Default Table -->
							<h1>CoVoiturage index</h1>

							<table class="table">
								<thead>
									<tr>
										<th>Id</th>
										<th>Depart</th>
										<th>Destination</th>
										<th>Date_dep</th>
										<th>Nmbr_place</th>
										<th>Cov_img</th>
										<th>Details</th>

									</tr>
								</thead>
								<tbody>
									{% for co_voiturage in co_voiturages %}
										<tr>
											<td>{{ co_voiturage.id }}</td>
											<td>{{ co_voiturage.depart }}</td>
											<td>{{ co_voiturage.destination }}</td>
											<td>{{ co_voiturage.dateDep ? co_voiturage.dateDep|date('Y-m-d') : '' }}</td>
											<td>{{ co_voiturage.nmbrPlace }}</td>
											<td><img class="img-profile " src="{{ asset('uploads/' ~ co_voiturage.covImg) }}" style="max-height: 80px"></td>


											<td>
												<a href="{{ path('app_co_voiturage_show', {'id': co_voiturage.id}) }}">
													<button type="button" class="btn btn-outline-dark">Detail</button>
												</a>
											</td>
										</tr>
									{% else %}
										<tr>
											<td colspan="7">no records found</td>
										</tr>
									{% endfor %}
								</tbody>
							</table>
							<a href="{{ path('app_co_voiturage_new') }}">Create new</a>

							<!-- End Default Table Example -->

						</div>

					</div>


				</div>


			</div>
		</section>

	</main>
{% endblock %}
