{% extends 'base.html.twig' %}

{% block title %}Client{% endblock %}

{% block body %}
    <h1>Client</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id_client</th>
                <td>{{ client.idClient }}</td>
            </tr>
            <tr>
                <th>Img</th>
                 <td><img src="{{ asset('uploads/' ~ client.img) }}" alt="Image du client"></td>
            </tr>
            <tr>
                <th>Gsm</th>
                <td>{{ client.gsm }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ client.email }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ client.password }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_client_index') }}">back to list</a>

    <a href="{{ path('app_client_edit', {'id_client': client.idClient}) }}">edit</a>

    {{ include('client/_delete_form.html.twig') }}
{% endblock %}
