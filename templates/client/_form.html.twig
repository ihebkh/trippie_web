{% extends 'Login/login.html.twig' %}

{% block body %}
 <div class="d-lg-flex half">
    <div class="bg order-1 order-md-2" style="background-image: url('Login/images/bg_2.jpg');"></div>
    <div class="contents order-2 order-md-1">
      <div class="container">
        <div class="row align-items-center justify-content-center">
          <div class="col-md-7">
            <h3>Register to <strong>Tripee</strong></h3>
            <br>
           <br>
            
         
             {{ form_start(form) }}
                {{ form_widget(form.img, {'attr': {'class': 'form-control',id: 'img'}}) }}
           
         
              <div class="form-group last mb-3">
                {{ form_label(form.gsm) }}
                {{ form_widget(form.gsm, {'attr': {'class': 'form-control', 'placeholder': 'GSM'}}) }}
              </div>
              <div class="form-group last mb-3">
                {{ form_label(form.email) }}
                {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': 'Email' , id: 'email'}}) }}
              </div>
              <div class="form-group last mb-3">
                {{ form_label(form.password) }}
                {{ form_widget(form.password, {'attr': {'class': 'form-control', 'placeholder': 'Password' , id: 'password'}}) }}
              </div>

             
              <input type="submit" value="Confirm" class="btn btn-block btn-primary" style="background-color: #3498db; border-color: #3498db;border-radius: 50px">
             
             
      
           {{ form_end(form) }}

          </div>
        </div>
      </div>
    </div>
  </div>
  {% endblock %}