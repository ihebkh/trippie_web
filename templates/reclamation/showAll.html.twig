{% extends "frontbase.html.twig" %}

{% block title %}Equipement index{% endblock %}

{% block body %}
    <h1>Equipement List</h1>

    <table class="table table-hover " style="background-color: white">
        <thead>
        <tr>
            <th>Type</th>
                <th>Commentaire</th>
                <th>Etats</th>
                <th>Id_user</th>
                <th>Date_creation</th>
                <th>Image</th>
                
        </tr>
        </thead>
        <tbody>
        {% for reclamation in reclamations %}
            <tr>
               <td>{{ reclamation.type }}</td>
                <td>{{ reclamation.commentaire }}</td>
                <td>{{ reclamation.etat }}</td>
                <td>{{ reclamation.idUser }}</td>
                <td>{{ reclamation.dateCreation ? reclamation.dateCreation|date('Y-m-d') : '' }}</td>


     {% if reclamation.image %}
    <td><img src="{{ asset('images/' ~ reclamation.image) }}" style="width:100px;height:100px;"></td>
{% else %}
    <td>No image available</td>
{% endif %}


            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


{% endblock %}