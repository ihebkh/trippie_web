{% extends 'base.html.twig' %}

{% block title %}Reclamation index{% endblock %}

{% block content %}
    <h1>Reclamation index</h1>

    <table id="results" class="table">

    <div>
            <input type="text" id="search" class="form-control" placeholder="Recherche ">
        </div>
        <thead>
            <tr>
                <th>Id</th>
                <th>Type</th>
                <th>Commentaire</th>
                <th>Etats</th>
                <th>Date_creation</th>
                <th>Image</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reclamation in reclamations %}
            <tr>
                <td>{{ reclamation.id }}</td>
                <td>{{ reclamation.type }}</td>
                <td>{{ reclamation.commentaire }}</td>
                <td>{{ reclamation.etat }}</td>
                <td>{{ reclamation.dateCreation ? reclamation.dateCreation|date('Y-m-d') : '' }}</td>
               {% if reclamation.image %}
    <td><img src="{{ asset('images/' ~ reclamation.image) }}" style="width:100px;height:100px;"></td>
{% else %}
    <td>No image available</td>
{% endif %}

                <td>
                    <a href="{{ path('app_reclamation_show', {'id': reclamation.id}) }}"><button type="button" class="btn btn-primary">Show</button></a>
                    <br><br>
                    <a href="{{ path('app_reclamation_add', {'id': reclamation.id}) }}"><button type="button" class="btn btn-info">Treat</button></a>
                    <br><br>
                    {{ include('reclamation/_delete_form.html.twig') }}
                    
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_reclamation_new') }}"><button type="button" class="btn btn-info">Create new</button></a>
    <a href="{{ path('app_reclamation_stat') }}"><button type="button" style="float: left;padding: 10px;" class="btn btn-info">Stat</button></a>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function() {
            $('#search').keyup(function() {
                var value = $(this).val();
                $.ajax({
                    url: "{{ path('search') }}",
                    type: "POST",
                    data: {value: value},
                    success: function(data) {

                        $('#results').html(data);
                        $('#results').css('width', '100%');
                        $('#results').css('position', 'static');
                    }
                });
            });
        });
    </script>
{% endblock %}
