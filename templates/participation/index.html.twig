{% extends 'base2.html.twig' %}

{% block title %}Participation index
{% endblock %}

{% block body %}
	<main id="main" class="main">


		<div class="pagetitle">
			<h1>Les Articles</h1>
			<nav>
				<ol class="breadcrumb">
					<li class="breadcrumb-item">
						<a href="index.html">Home</a>
					</li>
					<li class="breadcrumb-item">Tables</li>
					<li class="breadcrumb-item active">General</li>
				</ol>

			</nav>
		</div>
		<!-- End Page Title -->

		<section class="section">
			<div class="row">
				<div class="col-lg-12">

					<div class="card">

						{% for message in app.flashes('notice') %}
							<div class="alert alert-success bg-success text-light border-0 alert-dismissible fade show" role="alert">
								{{ message }}
							</div>

						{% endfor %}


						{% for message in app.flashes('noticedelete') %}
							<div class="alert alert-danger bg-danger text-light border-0 alert-dismissible fade show" role="alert">
								{{ message }}
							</div>

						{% endfor %}

						<div class="card-body">

							<h5 class="card-title">Participation list</h5>
							


							<!-- Default Table -->
							<h1>Participation index</h1>
							<a href="{{ path('exportpdf_cov') }}">pdf</a>

							<table class="table">
								<thead>
									<tr>
										<th>Id</th>
										<th>Nmbr_place_part</th>
										<th>Id_co</th>
										<th>id_client</th>
										<th>actions</th>
									</tr>
								</thead>
								<tbody>
									{% for participation in participations %}
										<tr>
											<td>{{ participation.id }}</td>
											<td>{{ participation.nmbrPlacePart }}</td>
											<td>{{ participation.idCo }}</td>
											<td>{{ participation.idClient }}</td>
											<td>
												<a href="{{ path('app_participation_show', {'id': participation.id}) }}">
													<button type="button" class="btn btn-outline-dark">Detail</button>
												</a>
											</td>
										</tr>
									</a>
								</tbody>
							</td>

						</tr>
					{% else %}
						<tr>
							<td colspan="5">no records found</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
			      <center>  {{ knp_pagination_render(participations, 'bootstrap_4_pagination.html.twig') }}</center>
		

			<a href="{{ path('app_participation_new') }}">Create new</a>
			

			<!-- End Default Table Example -->

		</div>

	</div>


</div></div></section></main>{% endblock %}
