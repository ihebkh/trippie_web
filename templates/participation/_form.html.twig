
{% extends 'base.html.twig' %}

{% block body %}
  <div class="container">
    <h1>Create new Participation</h1>
    <form method="POST" action="{{ path('app_participation_new') }}" enctype="multipart/form-data">
      {{ form_start(form) }}
      <div class="form-group">
        {{ form_label(form.nmbr_place_part, 'nmbr_place_part') }}
        {{ form_widget(form.nmbr_place_part, { 'attr': {'class': 'form-control'} }) }}
      </div>
      <div class="form-group">
        {{ form_label(form.id_co, 'id_co') }}
        {{ form_widget(form.id_co, { 'attr': {'class': 'form-control'} }) }}
      </div>
      <div class="form-group">
        {{ form_label(form.id_user, 'id_user') }}
        {{ form_widget(form.id_user, { 'attr': {'class': 'form-control'} }) }}
      </div>
      
      <button type="submit" class="btn btn-primary">Submit</button>
      {{ form_end(form) }}
    </form>
    <a href="{{ path('app_co_voiturage_index') }}">back to list</a>
  </div>
{% endblock %}
